.col-md-12.x_panel
  = form_for @note do |f|
    = render partial: 'shared/form_error_explanation', locals: { source: @note }

    .field
      = f.label :title
      = f.text_field :title, class: 'form-control'
    .field
      = f.label :content
      = f.text_area :content, id: 'editable', class: 'form-control', input_html: { rows: 10 }
    .actions
      = f.submit 'Save', class: 'btn btn-primary'

%script{src: "https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=#{ENV['TINYMCE_API_KEY']}"}
:javascript
  tinymce.init({
    selector:'textarea#editable',
    plugins: 'link image code',
    relative_urls: false
   });
