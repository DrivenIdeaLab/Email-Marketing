%h3 Listing campaigns

%table#example.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
  %thead
    %tr
      %th Name
      %th Tags
      %th Users Count
      %th #
      %th #
  %tbody
    - @campaigns.each do |campaign|
      %tr
        %td= campaign.name
        %td
          - campaign.tags.each do |tag|
            %span.badge{style: 'background-color: #337ab7'}
              = tag
        %td= campaign.users.count
        %td= link_to 'Show', campaign
        %td= link_to 'Destroy', campaign, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
