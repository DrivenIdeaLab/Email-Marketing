<% if @message.present? %>
  $('#create-success-message').text('<%= @message %>');
  $('#create-error-message').text('');

  $('#single-user')[0].reset();

  // Show message for 1,5 seconds
  setTimeout(function(){
    $('#create-success-message').text('');
  },1500);

<% elsif @errors.present? %>
  $('#create-error-message').text('<%= @errors %>');
  $('#create-success-message').text('');
<% end %>