- body = Tilt::ERBTemplate.new { "#{@email_template.body}" }
- subject = Tilt::ERBTemplate.new { "#{@email_template.subject}" }

= page_title subject.render(User.first).html_safe

- content_for :page_title_right do
  = link_to 'Edit', edit_email_template_path(@email_template), class: 'btn btn-default'


.x_panel
  .x_title
    = subject.render(User.first).html_safe
  .panel-body
    = body.render(User.first).html_safe
